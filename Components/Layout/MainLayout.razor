@inherits LayoutComponentBase

<div class="page d-flex flex-column min-vh-100">
    <nav class="navbar navbar-expand-md navbar-light bg-white border-bottom fixed-top shadow-sm">
        <div class="container-fluid px-md-5">
            <a class="navbar-brand d-flex align-items-center gap-2" href="/">
                <div class="rounded-3 d-flex align-items-center justify-content-center text-white brand-icon">
                    FP
                </div>
                <span class="fs-4 fw-bold" style="font-family: 'Poppins', sans-serif; color: var(--pop-dark);">
                    Factura<span style="color: var(--pop-primary);">Pop</span>
                </span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0 gap-md-3">
                    <li class="nav-item">
                        <NavLink class="nav-link fw-medium" href="/" Match="NavLinkMatch.All">
                            Inicio
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link fw-medium" href="/facturas">
                            Historial
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link fw-medium" href="/reportes">
                            Reportes
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link fw-medium" href="/dashboard">
                            Dashboard
                        </NavLink>
                    </li>
                    <li class="nav-item ms-md-2">
                        <NavLink class="btn btn-primary text-white px-4 rounded-pill" href="/facturador">
                            Facturar
                        </NavLink>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="flex-grow-1" style="padding-top: 80px;">
        @Body
    </main>

    <footer class="text-center py-4 text-muted small mt-auto border-top bg-light">
        <p class="mb-0">FacturaPop &copy; @DateTime.Now.Year</p>
    </footer>
</div>

<div id="blazor-error-ui" class="alert alert-danger fixed-bottom m-0 rounded-0" style="display:none">
    Ha ocurrido un error inesperado.
    <a href="" class="reload fw-bold">Recargar</a>
    <span class="dismiss float-end cursor-pointer"><i class="bi bi-x"></i></span>
</div>

<style>
    .brand-icon {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, var(--pop-dark), var(--pop-primary));
        font-weight: bold;
        font-family: 'Poppins';
    }

    .nav-link {
        color: var(--pop-dark) !important;
        transition: color 0.2s;
    }

        .nav-link:hover, .nav-link.active {
            color: var(--pop-primary) !important;
        }
</style>