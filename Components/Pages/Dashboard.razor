@page "/dashboard"
@using Facturar.Components.Data
@using Facturar.Components.Servicio
@inject ControladorFacturacion Controlador
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Dashboard - Inteligencia de Negocio</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Dashboard del Sistema</h1>
    <a href="/" class="btn btn-secondary">Volver al Inicio</a>
</div>

@if (stats == null)
{
    <div class="text-center mt-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
        <p>Analizando datos del sistema...</p>
    </div>
}
else {

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-white bg-primary mb-3 h-100">
                <div class="card-header">Ingresos Totales</div>
                <div class="card-body">
                    <h2 class="card-title">@stats.IngresosTotales.ToString("C")</h2>
                    <p class="card-text">Dinero total facturado históricamente.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-white bg-success mb-3 h-100">
            <div class="card-header">Total Facturas</div>
            <div class="card-body">
                <h2 class="card-title">@stats.TotalFacturas</h2>
                <p class="card-text">Facturas emitidas hasta la fecha.</p>
            </div>
        </div>
    </div>

    <div>
    <div class="col-md-4">
            <div class="card text-white bg-info mb-3 h-100">
                <div class="card-header">Ticket Promedio</div>
                <div class="card-body">
                    <h2 class="card-title">@stats.TicketPromedio.ToString("C")</h2>
                    <p class="card-text">Valor promedio de cada venta.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light fw-bold"> Rendimiento de Productos</div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong>Más Vendido (Unidades)</strong>
                            <div class="text-muted small">@stats.ProductoMasVendido.Nombre</div>
                        </div>
                        <span class="badge bg-primary rounded-pill">@stats.ProductoMasVendido.Valor.ToString("0") unid.</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong>Mayor Generador de Dinero</strong>
                            <div class="text-muted small">@stats.ProductoConMasIngresos.Nombre</div>
                        </div>
                        <span class="badge bg-success rounded-pill">@stats.ProductoConMasIngresos.Valor.ToString("C")</span>
                    </li>
                </ul>
            </div>
        </div>

    </div>

}


@code {
    private DashboardEstadisticas stats;

    protected override async Task OnInitializedAsync()
    {
        await Task.Delay(300);
        stats = await Controlador.ObtenerDatosDashboardAsync();
    }
}