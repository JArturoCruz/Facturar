@page "/facturas"
@using Facturar.Components.Data
@using Facturar.Components.Servicio
@rendermode InteractiveServer
@inject ControladorFacturacion Controlador
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>Facturas Guardadas</PageTitle>

<h1>Facturas Guardadas</h1>

@if (facturas == null)
{
    <p><em>Cargando facturas...</em></p>
}
else if (!facturas.Any())
{
    <p class="text-muted">No hay facturas guardadas.</p>
}
else
{
    <table class="table table-hover">
        <thead class="table-dark">
            <tr>
                <th>Nº Factura</th>
                <th>Fecha de Creación</th>

                <th>Total</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var f in facturas)
            {
                <tr>

                    <td>@f.NombreFactura</td>
                    <td>@f.FechaCreacion.ToString("d")</td>
                    <td>@f.Total.ToString("C")</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a href="/factura/@f.FacturaID" class="btn btn-primary btn-sm">
                                Ver
                            </a>

                            <button class="btn btn-warning btn-sm" @onclick="() => RecargarFactura(f)">
                                Modificar
                            </button>

                            <button class="btn btn-danger btn-sm" @onclick="() => EliminarFactura(f)">
                                🗑️
                            </button>

                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<a href="/facturador" class="btn btn-success">Crear Nueva Factura</a>

@code {
    private List<Factura> facturas;
    protected override async Task OnInitializedAsync()
    {
        facturas = await Controlador.ObtenerFacturasGuardadasAsync();
    }

    private async Task RecargarFactura(Factura factura)
    {
        var mensaje = $"¿Estás seguro de que quieres modificar la factura '{factura.NombreFactura}'?\n\n¡CUIDADO! Esto reemplazará tu factura actual en el borrador.";
        bool confirmado = await JSRuntime.InvokeAsync<bool>("confirm", mensaje);

        if (confirmado)
        {
            Controlador.FacturaIDEnModificacion = factura.FacturaID;
            Controlador.FechaFacturaEnBorrador = factura.FechaCreacion;

            await Controlador.GuardarEstadoModificacionAsync();
            await Controlador.GuardarFechaFacturaEnBorradorAsync();

            await Controlador.RecargarFacturaEnBorradorAsync(factura.FacturaID);
            Navigation.NavigateTo("/facturador");
        }
    }

    private async Task EliminarFactura(Factura factura)
    {
        var mensaje = $"¿Estás seguro de que quieres ELIMINAR PERMANENTEMENTE la factura '{factura.NombreFactura}'?\n\nEsta acción no se puede deshacer.";
        bool confirmado = await JSRuntime.InvokeAsync<bool>("confirm", mensaje);

        if (confirmado)
        {
            await Controlador.EliminarFacturaGuardadaAsync(factura.FacturaID);
            facturas.Remove(factura);
            StateHasChanged();
        }
    }
}