@page "/factura/{FacturaID:int}"
@using Facturar.Components.Data
@using Facturar.Components.Servicio
@rendermode InteractiveServer
@inject ControladorFacturacion Controlador
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>Detalle de Factura</PageTitle>

@if (factura != null)
{
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Factura: @factura.NombreFactura</h1>
        <div>
            <button class="btn btn-warning me-2" @onclick="() => RecargarFactura(factura)">
                Modificar esta Factura
            </button>
            <button class="btn btn-danger me-2" @onclick="() => EliminarFactura(factura)">
                Eliminar
            </button>
            <a href="/facturas" class="btn btn-secondary">Volver a la lista</a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header">
            <div class="row">
                <div class="col">
                    <strong>Fecha:</strong> @factura.FechaCreacion.ToLocalTime().ToString("g")
                </div>
                <div class="col text-end">
                    <strong>Total:</strong> <span class="fs-5 fw-bold">@factura.Total.ToString("C")</span>
                </div>
            </div>
        </div>
        <div class="card-body">
            <h4 class="mb-3">Items Incluidos</h4>
            <table class="table table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Producto</th>
                        <th>Cantidad</th>
                        <th>Precio Unitario</th>
                        <th>Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in factura.Items)
                    {
                        <tr>
                            <td>@item.Producto</td>
                            <td>@item.Cantidad</td>
                            <td>@item.PrecioUnitario.ToString("C")</td>
                            <td>@item.Subtotal.ToString("C")</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr class="table-light">
                        <td colspan="3" class="text-end fw-bold">TOTAL:</td>
                        <td class="fw-bold">@factura.Total.ToString("C")</td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
}
else if (facturaNoEncontrada)
{
    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">Error: Factura no encontrada</h4>
        <p>No se pudo encontrar una factura con el ID <strong>@FacturaID</strong>.</p>
        <hr>
        <p class="mb-0">
            <a href="/facturas" class="btn btn-secondary">Volver a la lista de facturas</a>
        </p>
    </div>
}
else
{
    <p><em>Cargando detalle...</em></p>
}


@code {
    [Parameter]
    public int FacturaID { get; set; }

    private Factura factura;
    private bool facturaNoEncontrada = false;

    protected override async Task OnParametersSetAsync()
    {
        factura = null;
        facturaNoEncontrada = false;

        factura = await Controlador.ObtenerDetalleFacturaAsync(FacturaID);

        if (factura == null)
        {
            facturaNoEncontrada = true;
        }
    }

    private async Task RecargarFactura(Factura factura)
    {
        var mensaje = $"¿Estás seguro de que quieres modificar la factura '{factura.NombreFactura}'?\n\n¡CUIDADO! Esto reemplazará tu factura actual en el borrador.";
        bool confirmado = await JSRuntime.InvokeAsync<bool>("confirm", mensaje);

        if (confirmado)
        {
            Controlador.NombreFacturaEnModificacion = factura.NombreFactura;
            Controlador.FacturaIDEnModificacion = factura.FacturaID;
            Controlador.NombreFacturaEnBorrador = factura.NombreFactura;

            await Controlador.GuardarEstadoModificacionAsync();
            await Controlador.GuardarNombreFacturaEnBorradorAsync();

            await Controlador.RecargarFacturaEnBorradorAsync(factura.FacturaID);
            Navigation.NavigateTo("/facturador");
        }
    }

    private async Task EliminarFactura(Factura factura)
    {
        var mensaje = $"¿Estás seguro de que quieres ELIMINAR PERMANENTEMENTE la factura '{factura.NombreFactura}'?\n\nEsta acción no se puede deshacer.";
        bool confirmado = await JSRuntime.InvokeAsync<bool>("confirm", mensaje);

        if (confirmado)
        {
            await Controlador.EliminarFacturaGuardadaAsync(factura.FacturaID);
            Navigation.NavigateTo("/facturas");
        }
    }
}   