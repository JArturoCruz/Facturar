@page "/factura/{FacturaID:int}"
@using Facturar.Components.Data
@using Facturar.Components.Servicio
@rendermode InteractiveServer
@inject ControladorFacturacion Controlador
@inject NavigationManager Navigation

<PageTitle>Detalle de Factura</PageTitle>

@if (factura == null)
{
   
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Factura: @factura.NombreFactura</h1>
        <a href="/facturas" class="btn btn-secondary">Volver a la lista</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header">
            <div class="row">
                <div class="col">
                    <strong>Fecha:</strong> @factura.FechaCreacion.ToLocalTime().ToString("g")
                </div>
                <div class="col text-end">
                    <strong>Total:</strong> <span class="fs-5 fw-bold">@factura.Total.ToString("C")</span>
                </div>
            </div>
        </div>
        <div class="card-body">
            <h4 class="mb-3">Items Incluidos</h4>
            <table class="table table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>Producto</th>
                        <th>Cantidad</th>
                        <th>Precio Unitario</th>
                        <th>Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in factura.Items)
                    {
                        <tr>
                            <td>@item.Producto</td>
                            <td>@item.Cantidad</td>
                            <td>@item.PrecioUnitario.ToString("C")</td>
                            <td>@item.Subtotal.ToString("C")</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr class="table-light">
                        <td colspan="3" class="text-end fw-bold">TOTAL:</td>
                        <td class="fw-bold">@factura.Total.ToString("C")</td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
}

@code {
    [Parameter]
    public int FacturaID { get; set; }

    private Factura factura;

    protected override async Task OnParametersSetAsync()
    {
        factura = await Controlador.ObtenerDetalleFacturaAsync(FacturaID);
        if (factura == null)
        {
            Navigation.NavigateTo("/facturas"); 
        }
    }
}