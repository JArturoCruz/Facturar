@page "/facturador"
@using Factura.Components.Data
@using Factura.Components.Servicio
@rendermode InteractiveServer
@inject ControladorFacturacion Controlador

<PageTitle>Facturador</PageTitle>

<h1>Crear Nueva Factura</h1>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <EditForm Model="newItem" OnValidSubmit="AgregarItemAFactura">
            <DataAnnotationsValidator />
            <div class="mb-3">
                <label for="producto" class="form-label">Producto:</label>
                <InputText id="producto" class="form-control" @bind-Value="newItem.Producto" />
                <ValidationMessage For="() => newItem.Producto" />
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="cantidad" class="form-label">Cantidad:</label>
                    <InputNumber id="cantidad" class="form-control" @bind-Value="newItem.Cantidad" />
                    <ValidationMessage For="() => newItem.Cantidad" />
                </div>
                <div class="col-md-6">
                    <label for="precio" class="form-label">Precio Unitario:</label>
                    <InputNumber id="precio" class="form-control" @bind-Value="newItem.PrecioUnitario" />
                    <ValidationMessage For="() => newItem.PrecioUnitario" />
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Agregar Producto</button>
        </EditForm>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-header">
        <h3>Resumen de Factura</h3>
    </div>
    <div class="card-body">
        @if (itemsFactura.Any())
        {
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Producto</th>
                        <th>Cantidad</th>
                        <th>Precio Unitario</th>
                        <th>Subtotal</th>
                        <th>Acción</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in itemsFactura)
                    {
                        <tr>
                            <td>@item.Producto</td>
                            <td>@item.Cantidad</td>
                            <td>@item.PrecioUnitario.ToString("C")</td>
                            <td>@item.Subtotal.ToString("C")</td>
                            <td>
                                <button class="btn btn-danger btn-sm" @onclick="() => EliminarItemDeFactura(item)">
                                    🗑️
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr class="table-dark">
                        <td colspan="3" class="text-end fw-bold">TOTAL:</td>
                        <td class="fw-bold">@TotalFactura.ToString("C")</td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>
        }
        else
        {
            <p class="text-center text-muted">Aún no hay productos en la factura.</p>
        }
    </div>
</div>


@code {
    private List<FacturaItem> itemsFactura = new List<FacturaItem>();
    private FacturaItem newItem = new();

    private decimal TotalFactura => itemsFactura.Sum(item => item.Subtotal);

    protected override async Task OnInitializedAsync()
    {
        itemsFactura = await Controlador.ObtenerItems();
    }

    private async Task AgregarItemAFactura()
    {
        await Controlador.AgregarItem(newItem);
        itemsFactura = await Controlador.ObtenerItems(); // Recargamos la lista
        newItem = new FacturaItem(); // Reseteamos el formulario
        StateHasChanged();
    }

    private async Task EliminarItemDeFactura(FacturaItem item)
    {
        await Controlador.EliminarItem(item.Identificador);
        itemsFactura = await Controlador.ObtenerItems(); // Recargamos la lista
        StateHasChanged();
    }
}