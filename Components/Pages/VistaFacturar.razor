@page "/facturador"
@using Facturar.Components.Data
@using Facturar.Components.Servicio
@rendermode InteractiveServer
@inject ControladorFacturacion Controlador
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>Facturar - FacturaPop</PageTitle>

<div class="container-fluid px-md-5 py-4" style="max-width: 1400px;">

    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h2 class="headline-large mb-1" style="font-weight: 400; color: var(--pop-dark);">
                @(Controlador.FacturaIDEnModificacion.HasValue ? "Modificar" : "Crear")
            </h2>
            <p class="text-secondary mb-0">FacturaPop &bull; Espacio de trabajo</p>
        </div>

        <div class="d-flex gap-2">
            <a href="/" class="btn btn-outline-secondary rounded-circle d-flex align-items-center justify-content-center" style="width:42px;height:42px;" title="Ir al Inicio">
                <i class="bi bi-house-door-fill"></i>
            </a>

            <button class="btn btn-secondary rounded-pill px-3" @onclick="LimpiarFacturador">
                <i class="bi bi-arrow-counterclockwise me-2"></i> Reiniciar
            </button>

            <a href="/facturas" class="btn btn-secondary rounded-pill px-3">
                <i class="bi bi-list-check me-2"></i> Historial
            </a>

            <a href="/dashboard" class="btn btn-outline-secondary rounded-circle d-flex align-items-center justify-content-center" style="width:42px;height:42px;" title="Dashboard">
                <i class="bi bi-speedometer2"></i>
            </a>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-4">
            @if (Controlador != null && Controlador.DraftItem != null)
            {
                <div class="card h-100 border-0 shadow-sm" style="background-color: #f8f9fa;">
                    <div class="card-body p-4">
                        <h5 class="mb-4 fw-bold" style="color: var(--pop-primary);">
                            @(Controlador.DraftItem.Identificador == 0 ? "➕ Agregar Concepto" : "✏️ Editar Concepto")
                        </h5>

                        <EditForm Model="Controlador.DraftItem" OnValidSubmit="OnFormSubmit">
                            <DataAnnotationsValidator />

                            <div class="mb-4">
                                <label for="producto" class="form-label small text-uppercase fw-bold text-muted">Descripción</label>
                                <InputText id="producto" class="form-control form-control-lg bg-white border-0 shadow-sm"
                                           placeholder="Ej. Servicios Profesionales"
                                           @bind-Value="Controlador.DraftItem.Producto"
                                           @bind-Value:after="Controlador.GuardarDraftItemAsync" />
                                <ValidationMessage For="() => Controlador.DraftItem.Producto" />
                            </div>

                            <div class="row g-3 mb-4">
                                <div class="col-6">
                                    <label for="cantidad" class="form-label small text-uppercase fw-bold text-muted">Cantidad</label>
                                    <InputNumber id="cantidad" class="form-control form-control-lg bg-white border-0 shadow-sm text-center"
                                                 @bind-Value="Controlador.DraftItem.Cantidad"
                                                 @bind-Value:after="Controlador.GuardarDraftItemAsync" />
                                </div>
                                <div class="col-6">
                                    <label for="precio" class="form-label small text-uppercase fw-bold text-muted">Precio</label>
                                    <div class="input-group shadow-sm">
                                        <span class="input-group-text bg-white border-0 text-muted">$</span>
                                        <InputNumber id="precio" class="form-control form-control-lg bg-white border-0 ps-0"
                                                     @bind-Value="Controlador.DraftItem.PrecioUnitario"
                                                     @bind-Value:after="Controlador.GuardarDraftItemAsync" />
                                    </div>
                                </div>
                            </div>

                            <div class="d-grid gap-2">
                                @if (Controlador.DraftItem.Identificador == 0)
                                {
                                    <button type="submit" class="btn btn-primary btn-lg shadow-sm">
                                        Agregar Item
                                    </button>
                                }
                                else
                                {
                                    <div class="d-flex gap-2">
                                        <button type="submit" class="btn btn-primary flex-grow-1">Guardar</button>
                                        <button type="button" class="btn btn-outline-secondary" @onclick="CancelarEdicion">Cancelar</button>
                                    </div>
                                }
                            </div>
                        </EditForm>
                    </div>
                </div>
            }
        </div>

        <div class="col-lg-8">
            <div class="card h-100 border-0 shadow" style="background-color: white;">
                <div class="card-header bg-white border-bottom-0 pt-4 px-5 d-flex justify-content-between align-items-start">
                    <div class="d-flex align-items-center gap-3">
                        <div class="rounded-3 d-flex align-items-center justify-content-center text-white shadow-sm"
                             style="width: 48px; height: 48px; background: linear-gradient(135deg, var(--pop-dark), var(--pop-primary)); font-weight: bold; font-family: 'Poppins';">
                            FP
                        </div>
                        <div>
                            <h4 class="mb-0 fw-bold text-dark" style="font-family: 'Poppins';">Factura<span style="color: var(--pop-primary);">Pop</span></h4>
                            <small class="text-muted">Borrador Preliminar</small>
                        </div>
                    </div>

                    <div class="text-end">
                        <label class="form-label d-block text-start small text-muted text-uppercase fw-bold">Fecha de Emisión</label>
                        <InputDate @bind-Value="Controlador.FechaFacturaEnBorrador"
                                   @bind-Value:after="Controlador.GuardarFechaFacturaEnBorradorAsync"
                                   class="form-control form-control-sm border-0 bg-light fw-bold text-end" style="width: 160px;" />
                    </div>
                </div>

                <div class="card-body px-5">
                    <div class="p-4 rounded-4 mb-4" style="background-color: #f3e8ff;">
                        <label class="small text-uppercase fw-bold mb-1 text-primary opacity-75">Facturar a:</label>
                        <InputText @bind-Value="Controlador.NombreUsuarioEnBorrador"
                                   @bind-Value:after="Controlador.GuardarUsuarioEnBorradorAsync"
                                   class="form-control-plaintext fs-3 fw-bold text-dark"
                                   placeholder="Nombre del Cliente..." />
                    </div>

                    @if (!string.IsNullOrWhiteSpace(errorAlGuardar))
                    {
                        <div class="alert alert-danger rounded-4 d-flex align-items-center mb-3">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i> @errorAlGuardar
                        </div>
                    }

                    <div class="table-responsive">
                        <table class="table align-middle">
                            <thead class="border-bottom">
                                <tr class="text-muted small text-uppercase">
                                    <th class="ps-0 py-3">Concepto</th>
                                    <th class="text-center py-3">Cant</th>
                                    <th class="text-end py-3">Precio</th>
                                    <th class="text-end py-3">Importe</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (itemsFactura.Any())
                                {
                                    @foreach (var item in itemsFactura)
                                    {
                                        <tr>
                                            <td class="ps-0 fw-medium text-dark py-3">@item.Producto</td>
                                            <td class="text-center py-3">
                                                <span class="badge rounded-pill bg-light text-dark border">@item.Cantidad</span>
                                            </td>
                                            <td class="text-end text-muted py-3">@item.PrecioUnitario.ToString("C")</td>
                                            <td class="text-end fw-bold text-dark py-3">@item.Subtotal.ToString("C")</td>
                                            <td class="text-end pe-0 py-3">
                                                <button class="btn btn-link p-0 me-2 text-primary" @onclick="() => PrepararEdicion(item)">
                                                    <i class="bi bi-pencil-fill"></i>
                                                </button>
                                                <button class="btn btn-link p-0 text-danger" @onclick="() => EliminarItemDeFactura(item)">
                                                    <i class="bi bi-trash-fill"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center py-5 text-muted opacity-50">
                                            <i class="bi bi-cart-x fs-1 d-block mb-2"></i>
                                            Sin conceptos agregados.
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="card-footer bg-white border-top-0 pb-5 px-5">
                    <div class="d-flex justify-content-between align-items-center p-4 rounded-4 shadow-sm"
                         style="background-color: var(--pop-dark); color: white;">
                        <div>
                            <small class="d-block opacity-50 text-uppercase fw-bold">Total a Pagar</small>
                            <span class="fs-1 fw-bold">@TotalFactura.ToString("C")</span>
                        </div>

                        @if (itemsFactura.Any())
                        {
                            <button class="btn btn-lg bg-white text-dark rounded-pill px-4 fw-bold shadow-sm"
                                    @onclick="GuardarFactura">
                                <i class="bi bi-check-circle-fill me-2 text-success"></i>
                                @(Controlador.FacturaIDEnModificacion.HasValue ? "Actualizar" : "Finalizar")
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private List<FacturaItem> itemsFactura = new List<FacturaItem>();
    private decimal TotalFactura => itemsFactura.Sum(item => item.Subtotal);
    private string errorAlGuardar = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await Controlador.CargarEstadoBorradorAsync();
        itemsFactura = await Controlador.ObtenerItems();
    }

    private async Task OnFormSubmit()
    {
        await Controlador.GuardarCambiosDraftItemAsync();
        itemsFactura = await Controlador.ObtenerItems();
        StateHasChanged();
    }

    private async Task EliminarItemDeFactura(FacturaItem item)
    {
        await Controlador.EliminarItem(item.Identificador);
        itemsFactura = await Controlador.ObtenerItems();
        StateHasChanged();
    }

    private void PrepararEdicion(FacturaItem item)
    {
        Controlador.CargarItemParaEdicion(item);
    }

    private async Task CancelarEdicion()
    {
        await Controlador.CancelarEdicionAsync();
        StateHasChanged();
    }

    private async Task GuardarFactura()
    {
        errorAlGuardar = string.Empty;
        try
        {
            if (Controlador.FacturaIDEnModificacion.HasValue)
            {
                await Controlador.ActualizarFacturaGuardadaAsync(
                    Controlador.FacturaIDEnModificacion.Value,
                    Controlador.FechaFacturaEnBorrador,
                    Controlador.NombreUsuarioEnBorrador,
                    itemsFactura
                );
            }
            else
            {
                await Controlador.GuardarFacturaActualAsync(
                    Controlador.FechaFacturaEnBorrador,
                    Controlador.NombreUsuarioEnBorrador,
                    itemsFactura
                );
            }
            itemsFactura = await Controlador.ObtenerItems();
            StateHasChanged();
            Navigation.NavigateTo("/facturas");
        }
        catch (Exception ex)
        {
            errorAlGuardar = ex.Message;
            StateHasChanged();
        }
    }

    private async Task LimpiarFacturador()
    {
        bool confirmado = await JSRuntime.InvokeAsync<bool>("confirm", "Se limpiará el borrador actual. ¿Deseas continuar?");
        if (confirmado)
        {
            await Controlador.LimpiarEstadoBorradorAsync();
            itemsFactura = await Controlador.ObtenerItems();
            errorAlGuardar = string.Empty;
            StateHasChanged();
        }
    }
}